<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Titulo</th>
      <th>Content</th>
      <th>Image</th>
      <th>Published</th>
      <th>Type</th>
      <th>Reputation</th>
      <th>Commentable ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= image_tag post.image_url.to_s %></td>
        <td><%= post.created_at %></td>
        <td><%= post.type_post %></td>
        <td><%= link_to 'Show', post %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
