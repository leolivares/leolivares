<p id="notice"><%= notice %></p>



<div class="main-content-wrapper section-padding-50" >
        <div class="container">
          <h1>Hotels</h1>
            <div class="row justify-content-center">

            <table>
              <thead>
                <tr>
                  <th>City</th>
                  <th>Nombre</th>
                  <th>Reputation</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @hotels.each do |hotel| %>
                  <tr>
                    <td><%= hotel.city.name %></td>
                    <td><%= hotel.nombre %></td>
                    <td><%= hotel.reputation %></td>
                    <td><%= link_to 'Show', hotel %></td>
                    <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
                    <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

        </div>

        <%= link_to 'New Hotel', new_hotel_path %>

      </div>



  </div>

<br>


