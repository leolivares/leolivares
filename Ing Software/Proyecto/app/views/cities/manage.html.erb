<p id="notice"><%= notice %></p>



<div class="main-content-wrapper section-padding-50" >
        <div class="container">
          <h1>Cities</h1>
          <div class="row justify-content-center">
                
                <table>
                  <thead>
                    <tr>
                      <th>Country</th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Latitude</th>
                      <th>Longitude</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @cities.each do |city| %>
                      <tr>
                        <td><%= city.country.name %></td>
                        <td><%= city.name %></td>
                        <td><%= city.description %></td>
                        <td><%= city.latitude %></td>
                        <td><%= city.longitude %></td>
                        <td><%= link_to 'Show', city %></td>
                        <td><%= link_to 'Edit', edit_city_path(city) %></td>
                        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

            </div>

            <%== pagy_nav_bootstrap(@pagy) %>

        </div>

    </div>

<br>

<%= link_to 'New City', new_city_path %>
