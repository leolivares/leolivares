<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Country</th>
      <th>State</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td> <%= request.user.email%> </td>
        <td><%= request.country.name %></td>
        <td><%= request.state %></td>
        <td><%= request.reason %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>

        <% if (current_admin || (current_user && current_user.category == 'moderator' && current_user.country_id == request.country.id)) %>
        <td><%= link_to 'Aceptar', aceptar_request_path(request)%></td>
        <%end%>

        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
