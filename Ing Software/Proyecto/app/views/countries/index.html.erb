<div class="container" style="margin-top: 75px;">
  <p id="notice"><%= notice %></p>

  <h1>Countries</h1>
    <div>					
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <input id="search_c" type="text" class="form-control input-lg" autofocus="on" autocomplete="off" placeholder="Search" />
          <span class="input-group-btn">
            <button class="btn btn-info btn-lg" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
        <ul class="list-group scrollbar-black bordered-black square thin" style="max-height: 30rem;overflow-y:scroll;-webkit-overflow-scrolling: touch;">
          <% @countries.each do |country| %>
            <li class="list-group-item"><%= link_to country.name, country %></li>
          <% end %>
        </ul>
      </div>
    </div>
  
  <% if current_user && @reputation > 3 %>
  <%= link_to 'Ser moderador de un paÃ­s', new_request_path %>
  <%end%>
</div>

<script>
  $(function(){
    $('#search_c').keyup(function(){	
      var current_query = $('#search_c').val().toLowerCase();
      if (current_query !== "") {
        $(".list-group li").hide();
        $(".list-group li").each(function(){
          var current_keyword = $(this).text();
          if (current_keyword.toLowerCase().indexOf(current_query) >=0) {
            $(this).show();    	 	
          };
        });    	
      } else {
        $(".list-group li").show();
      };
    });
  });
</script>