<div class="container" style="margin-top: 75px;">
  <p id="notice"><%= notice %></p>

  <h1>Countries</h1>
  <%== pagy_nav_bootstrap(@pagy) %>

  <div class="main-content-wrapper section-padding-50" >
  <div class="container">
    <h1>Hotels</h1>
      <div class="row justify-content-center">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Subscribers</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @countries.each do |country| %>
                <tr>
                  <td><%= country.name %></td>
                  <td><%= country.description %></td>
                  <td><%= country.subscribers %></td>
                  <td><%= country.latitude %></td>
                  <td><%= country.longitude %></td>
                  <td><%= link_to 'Show', country %></td>
                  <td><%= link_to 'Edit', edit_country_path(country) %></td>
                  <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
